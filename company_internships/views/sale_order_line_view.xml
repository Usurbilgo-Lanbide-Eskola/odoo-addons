<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_link_form" model="ir.ui.view">
            <field name="name">view.student.link.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="before">
                    <field name="has_internship_line" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="order_partner_id" invisible="1"/>
                    <field name="school_year_id" invisible="1"/>
                    <field name="internship_record_id"
                           domain="[('school_year_id', '=', school_year_id), ('student_company_id', '=', False), ('group_id', '=', product_id)]"
                           attrs="{'readonly': ['|', ('internship_line', '=', False), ('state', '!=', 'sale')],
                           'column_invisible': ['|', ('parent.has_internship_line', '=', False), ('parent.state', '!=', 'sale')]}" options="{'no_create': True}"/>
                    <field name="internship_line" invisible="1"/>
                    <field name="instructor_id" domain="[('parent_id', 'child_of', order_partner_id), ('company_instructor', '=', True)]" attrs="{'column_invisible': [('parent.has_internship_line', '=', False)], 'readonly': 0}"/>
                    <field name="tutor_id" domain="[('is_tutor', '=', True)]" attrs="{'column_invisible': [('parent.has_internship_line', '=', False)], 'readonly': 0}"/>
                    <field name="internship_type_id" attrs="{'column_invisible': [('parent.has_internship_line', '=', False)], 'readonly': 0}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                    <field name="order_partner_id" invisible="1"/>
                    <field name="school_year_id" invisible="1"/>
                    <field name="internship_line" invisible="1"/>
                    <div name="internship_record_id" attrs="{'invisible': [('internship_line', '=', False)]}">
                        <label for="internship_record_id"/>
                        <field name="internship_record_id"
                               domain="[('school_year_id', '=', school_year_id), ('student_company_id', '=', False), ('group_id', '=', product_id)]"
                               options="{'no_create': True}"/>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
