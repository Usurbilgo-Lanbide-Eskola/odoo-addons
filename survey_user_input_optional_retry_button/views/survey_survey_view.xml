<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_survey_no_retry_option_form" model="ir.ui.view">
        <field name="name">Survey.no.retry.option</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='progression_mode']" position="after">
                <field name="repeat_survey"/>
            </xpath>
        </field>
    </record>
</odoo>